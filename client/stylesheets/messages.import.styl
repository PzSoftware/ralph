.messages-list
  padding 1rem 0 5.5rem 0

  -webkit-transition all 200ms
  -moz-transition all 200ms
  -o-transition all 200ms
  transition all 200ms
  transform translate3d(0, 0, 0)

  .center-muted-notice
    background-color rgba 255,255,255,0.8
    margin 2rem auto
    max-width 40rem

.messages-list--show-actions
  transform: translate3d(8rem, 0, 0)

.message-group
  position relative
.message
  -webkit-transition all 200ms// cubic-bezier 0.175, 0.885, 0.32, 1.275
  -moz-transition all 200ms// cubic-bezier 0.175, 0.885, 0.32, 1.275
  -o-transition all 200ms// cubic-bezier 0.175, 0.885, 0.32, 1.275
  transition all 200ms// cubic-bezier 0.175, 0.885, 0.32, 1.275

  // -webkit-transform translate3d -50%, 0, 0
  // transform translate3d -50%, 0, 0
  // opacity 0

  position relative
  color #222
  font-size 1.4rem
  border-radius 0.6rem
  display inline-block
  margin 0.3rem 1rem
  max-width 85%
  text-align left
  background #FFF
  overflow hidden
.message__inner
  padding 0 0.8rem 0.4rem 0.8rem
.message__username
  display block
  color #19BAD1
  font-weight bold
  font-size 1.3rem
  padding 0.3rem 0.8rem 0.4rem 0.8rem
.message__when
  position absolute
  bottom 0
  left 100%
  color #999
  font-size 1.2rem
  margin 0 0 0.5rem 0.7rem
  opacity 0.4
.message__content
  padding 0
  margin 0
  line-height 1.9rem
  p
    display inline-block
  >a
    color #006586
    white-space nowrap
    text-overflow ellipsis
    overflow hidden
    display block
    &:hover
      color #00BFFF
.message__bg
  position absolute
  top 0
  left 0
  right 0
  bottom 0
  background rgba 0,0,0,0.8
  display none
.message__img
  @extend .cover-image
  display block
  position absolute
  top 0
  left 0
  right 0
  bottom 0
  overflow hidden
  opacity 0.75
  border-radius 0.6rem
.message__img--large
  @extend .contain-image
  z-index 5000
  top 0 !important
  left 0 !important
  right 0 !important
  bottom 0 !important
  width auto !important
  height auto !important
  opacity 1 !important
  background-color rgba 0,0,0,0.9
  border-radius 0
.message__actions
  text-align center
  position absolute
  right 100%
  top 0.5rem
  display none
  background #FFF
  padding 0 0.5rem
  border-radius 0.6rem
.message__action
  white-space nowrap
  background #666
  border-radius 0.3rem
  color #FFF
  display block
  font-size 1rem
  padding 0.4rem 0.6rem
  margin 0.5rem 0
  cursor pointer
.message__img-expand
  bottom 0
  color #FFFFFF
  font-size 2rem
  padding 0.8rem 1rem
  position absolute
  right 0
  text-shadow 0 0 3px #333
.message--system
  text-align center
  .message__border
    border-color rgba 41,128,185, 0.3
  .message__inner
    -webkit-transform scale(0,0)
    transform scale(0,0)
    -webkit-transform translate3d(0, 0, 0)
    transform translate3d(0, 0, 0)
    background #3498db
    max-width none
    color #FFF
    font-weight bold
  .message__when
  .message__username
  .message__caret
    display none
.message--me
  .message__username
    color #FFF !important
  .message__inner
    background #28b463
    color #FFF
  .message__content
    >a
      color #FFF
      &:hover
        color #FFF
  .message__when
    position absolute
    left auto
    right 100%
    margin-left 0
    margin-right 0.7rem
.message--visible
  .message__inner
    opacity 1 !important
.message--with-image
  cursor pointer
  min-height 12rem
  min-width 20rem
  margin-top 1px
  border-bottom none

  .message__bg
    display block
  .message__username
    position relative
    z-index 10
    color #FFF !important
    text-shadow 0 0 3px #333
  .message__content
    p
      position relative
      z-index 10
      color #FFF !important
      text-shadow 0 0 3px #333
.message-container--show-actions
  .message__actions
    display block


.place-none
  line-height 2.1rem
  color muted-color
  height 100%
  padding 0 2rem
  text-align center
  position absolute
  top 50%
  margin-top -15.5rem
  left 0
  right 0
  overflow hidden
.place-none__head
  font-size 2.6rem
  line-height 3rem
  font-weight bold
  color muted-more-color
  text-transform uppercase
.place-none__icons
  color #FFF
  font-size 2.6rem
  left -1rem
  margin 2.3rem -3rem 2.3rem -2rem
  padding 1rem 0
  overflow hidden
  position relative
  white-space nowrap
  background orange
  i
    display inline-block
    margin 0 0.6rem
.place-none__description
  font-size 1.4rem
  color muted-more-color
  font-weight bold
  text-transform uppercase


// .message-form
.message-form__get-image
  bottom 1.2rem
  color #999999
  cursor pointer
  font-size 1.3rem
  left 0.6rem
  padding 0.3rem 0.5rem
  position absolute
.message-form__file
  display none
.message-form--with-image
  padding-left 3.5rem
